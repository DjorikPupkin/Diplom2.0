<Page x:Class="ComService.Pages.PrintPurPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrintPurPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WebBrowser Margin="5" Grid.Row="1" x:Name="WbP" />
        <Button x:Name="PrBtn" Click="PrBtn_Click" Content="Печать" Width="100" Height="30" Grid.Row="0" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>
</Page>
